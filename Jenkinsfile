pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo  'Hello Build Stage'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Hello Deploy Stage'
            }
        }
        stage('Test') {
            steps {
                echo 'Hello Test Stage'
            }
        }
        stage('Release') {
            steps {
                echo 'Hello Release Stage'
            }
        }
    }
}
